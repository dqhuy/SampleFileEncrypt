<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PDF Management App</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- Sweet Alert 2-->
    <link rel="stylesheet" href="~/lib/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css" />
    <link href="/css/site.css" rel="stylesheet">
    <script src="~/js/jquery/jquery.min.js"></script>
</head>
<body class="bg-gray-100">
    <nav class="bg-blue-600 text-white p-4">
        <div class="container mx-auto flex justify-between">
            <a href="/" class="text-xl font-bold">PDF Management</a>
            <div>
                @if (User.Identity.IsAuthenticated)
                {
                <a href="/Document/Index" class="mr-4">Documents</a>
                <a href="/Account/Manage" class="mr-4">Manage Users</a>
                <a href="/Account/Logout">Logout</a>
                }
                else
                {
                <a href="/Account/Login" class="mr-4">Login</a>
                <a href="/Account/Register">Register</a>
                }
            </div>
        </div>
    </nav>
    <div class="container mx-auto p-4">
        @RenderBody()
    </div>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/js/Common.js" asp-append-version="true"></script>
    <script type="text/javascript">
        InitCommonJs();
    </script>
</body>
</html>