@model PDFManagementApp.Models.ApplicationUser
<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
	<h2 class="text-2xl font-bold mb-4">Edit User</h2>
	<form method="post" action="/Account/Edit/@Model.Id">
		<div class="mb-4">
			<label class="block text-gray-700">Username</label>
			<input type="text" name="username" value="@Model.Username" class="w-full p-2 border rounded" required="">
        </div>
		<div class="mb-4">
			<label class="block text-gray-700">Password (leave blank to keep unchanged)</label>
			<input type="password" name="password" class="w-full p-2 border rounded">
        </div>
		<div class="mb-4">
			<label class="block text-gray-700">Encryption Key</label>
			<input type="text" name="encryptionKey" value="@Model.EncryptionKey" class="w-full p-2 border rounded" required="">
        </div>
		<button type="submit" class="bg-blue-600 text-white p-2 rounded w-full">Save</button>
	</form>
</div>