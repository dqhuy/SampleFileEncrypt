@model List<PDFManagementApp.Models.Document>
	<div class="bg-white p-6 rounded-lg shadow-md">
		<h2 class="text-2xl font-bold mb-4">Documents</h2>
		<a href="/Document/Upload" class="bg-blue-600 text-white p-2 rounded mb-4 inline-block">Upload New Document</a>
		<table class="w-full border-collapse">
			<thead>
				<tr class="bg-gray-200">
					<th class="p-2">File Name</th>
					<th class="p-2">Size (bytes)</th>
					<th class="p-2">Upload Date</th>
					<th class="p-2">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var doc in Model)
				{
				<tr>
					<td class="p-2 border">@doc.FileName</td>
					<td class="p-2 border">@doc.FileSize</td>
					<td class="p-2 border">@doc.UploadDate</td>
					<td class="p-2 border">
						<a href="/Document/View/@doc.Id" class="text-blue-600">View</a>
						<form method="post" action="/Document/Download/@doc.Id" class="inline">
							<input type="text" name="encryptionKey" placeholder="Enter key" class="p-1 border" required="">
								<button type="submit" class="text-blue-600">Download</button>
							</form>
					</td>
				</tr>
				}
			</tbody>
		</table>
	</div>